# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
        color_good = "#E8DFD6"
        color_bad = "#586E75"
        color_degraded = "#DC322F"
}

order += "cpu_usage"
order += "cpu_temperature _first_"
# order += "cpu_temperature all"  # not different from _first_ without specifying dir
order += "memory"
# order += "load"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
# order += "read_file UPTIME"
# order += "battery 0"
# order += "battery 1"
order += "battery all"
order += "tztime local"

cpu_usage {
    format = " 🖥 %usage "
    # format = " cpu %usage "
}

cpu_temperature _first_ {
    format = " 🌡 %degrees°C "
    max_threshold = 70
    format_above_threshold = " 🤒  %degrees°C "
    # path = "/sys/devices/platform/coretemp.0/hwmon/hwmon1/temp1_input"
}

cpu_temperature all {
    format = " 🌡 %degrees°C "
    max_threshold = 70
    format_above_threshold = " 🤒  %degrees°C "
}

load {
    format = " %1min %5min %15min "
    # max_threshold = 0.3
}

disk "/" {
    # format = " m.2 %avail / %total "
    # format = " ⛁ %avail / %total "
    # format = " 🖴 %avail / %total "
    format = " 🖴 %used / %total "
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = " %essid: %ip "
        format_down = ""
        # no bitrate available for no reason
}

wireless _first_ {
    format_up = " %essid: %bitrate %ip "
    format_down = ""
}

memory {
    format = " 🖫 %used / %total "
    # format = " %free %available (%used) / %total "

    threshold_degraded = "15%"
    format_degraded = " %used / %total "
}

read_file UPTIME {
    format = "%title: %content"
    path = "/proc/uptime"
}

battery 0 {
        # format = "%status %percentage %remaining %emptytime"
        format = " %status%percentage "
        format_down = ""
        last_full_capacity = true
        integer_battery_capacity = true
        # status_chr = ""
        status_chr = "⚡"
        # status_bat = "☉"
        status_bat = "☉"
        # status_bat = "⊖"
        # status_bat = "🔋"
        status_unk = "???"
        # status_unk = "☉"
        # status_unk = "⊖"
        status_full = "☻"
        low_threshold = 10
        threshold_type = percentage
}

battery 1 {
        # format = "%status %percentage %remaining %emptytime"
        format = " %status%percentage "
        format_down = ""
        last_full_capacity = true
        integer_battery_capacity = true
        # status_chr = ""
        status_chr = "⚡"
        status_bat = "☉"
        # status_bat = "⊖"
        # status_bat = "🔋"
        status_unk = "???"
        # status_unk = "☉"
        status_full = "☻"
        low_threshold = 10
        threshold_type = percentage
}

battery all {
        # format = "%status %percentage %remaining %emptytime"
        format = " %status%percentage "
        format_down = ""
        last_full_capacity = true
        integer_battery_capacity = true
        # status_chr = ""
        status_chr = "⚡"
        status_bat = "☉"
        # status_bat = "🔋"
        status_unk = "???"
        # status_unk = "☉"
        status_full = "☻"
        low_threshold = 10 
        threshold_type = percentage
}
tztime local {
        # format = "%Y-%m-%d %H:%M:%S"
        # format = " %m/%d ⏲%H:%M "
        format = " %m/%d %H:%M "
}
